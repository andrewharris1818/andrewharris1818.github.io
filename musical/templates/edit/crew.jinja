{% extends "index.jinja" %}
{% block content %}
  <a href="{{url_for('edit.dashboard')}}" class=" button is-info">Dashboard</a>
<section class="section">
  <h2 class="title">Crew for {{ production.title }}</h2>

  <!-- Add Crew Member -->
  <form method="POST">
    <input type="hidden" name="production_id" value="{{ production.id }}">
    <div class="field">
      <label class="label">Name</label>
      <input class="input" type="text" name="name" required>
    </div>
    <div class="field">
      <label class="label">Responsibility</label>
      <input class="input" type="text" name="responsibility">
    </div>
    <button class="button is-primary" type="submit">Add Crew Member</button>
  </form>
 
  <hr>

  <!-- Existing Crew -->
  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>Name</th>
        <th>Responsibility</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for c in crew %}
      <tr>
        <td>{{ c.name }}</td>
        <td>{{ c.responsibility }}</td>
        <td>
          <!-- Delete button posts back to same route -->
          <form method="POST" action="{{ url_for('edit.crew', production_id=production.id) }}" style="display:inline;">
            <input type="hidden" name="delete_crew_id" value="{{ c.id }}">
            <button class="button is-small is-danger" type="submit">Delete</button>
          </form>
        </td>
      </tr>
      {% else %}
      <tr><td colspan="3">No crew members yet.</td></tr>
      {% endfor %}
    </tbody>
  </table>
</section>
{% endblock content %}
