{% extends "index.jinja" %}
{% block content %}
<section class="section">
  <h2 class="title">Edit Production</h2>
  <form method="POST">
    <div class="field">
      <label class="label">Title</label>
      <input class="input" type="text" name="title" value="{{ production.title }}" required>
    </div>
    <div class="field">
      <label class="label">Subtitle</label>
      <input class="input" type="text" name="subtitle" value="{{ production.subtitle }}">
    </div>
    <div class="field">
      <label class="label">Cover Image</label>
      <input class="input" type="text" name="cover_image" value="{{ production.cover_image }}">
    </div>
    <div class="field">
      <label class="label">Location</label>
      <input class="input" type="text" name="location" value="{{ production.location }}">
    </div>
    <div class="field">
      <label class="label">Price</label>
      <input class="input" type="text" name="price" value="{{ production.price }}">
    </div>
    <div class="field">
      <label class="label">Copyright</label>
      <input class="input" type="text" name="copyright" value="{{ production.copyright_info }}">
    </div>
    <div class="field">
      <label class="label">Notes</label>
      <textarea class="textarea" name="notes">{{ production.notes }}</textarea>
    </div>
    <button class="button is-primary" type="submit">Save Changes</button>
  </form>
</section>
{% endblock content %}
